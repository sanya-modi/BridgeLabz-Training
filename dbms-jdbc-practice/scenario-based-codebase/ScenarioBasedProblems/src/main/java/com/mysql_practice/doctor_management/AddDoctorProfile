+-----------+------------+------------+--------+-------------------+-------------+-----------+

CREATE TABLE specializations(
specialization_id INT AUTO_INCREMENT PRIMARY KEY,
specialization_name VARCHAR(70) NOT NULL UNIQUE
);

SELECT * FROM specializations;
