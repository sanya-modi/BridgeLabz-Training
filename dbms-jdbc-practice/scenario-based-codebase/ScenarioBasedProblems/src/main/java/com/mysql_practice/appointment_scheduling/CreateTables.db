/* Appointment Scheduling */

CREATE TABLE patients_dc (
    patient_id INT PRIMARY KEY AUTO_INCREMENT,
    patient_name VARCHAR(100) NOT NULL,
    phone VARCHAR(15)
);
+--------------+--------------+------+-----+---------+----------------+
| Field        | Type         | Null | Key | Default | Extra          |
+--------------+--------------+------+-----+---------+----------------+
| patient_id   | int          | NO   | PRI | NULL    | auto_increment |
| patient_name | varchar(100) | NO   |     | NULL    |                |
| phone        | varchar(15)  | YES  |     | NULL    |                |
+--------------+--------------+------+-----+---------+----------------+

CREATE TABLE doctors_dc (
    doctor_id INT PRIMARY KEY AUTO_INCREMENT,
    doctor_name VARCHAR(100) NOT NULL,
    specialization VARCHAR(100),
    max_daily_capacity INT DEFAULT 10
);
+--------------------+--------------+------+-----+---------+----------------+
| Field              | Type         | Null | Key | Default | Extra          |
+--------------------+--------------+------+-----+---------+----------------+
| doctor_id          | int          | NO   | PRI | NULL    | auto_increment |
| doctor_name        | varchar(100) | NO   |     | NULL    |                |
| specialization     | varchar(100) | YES  |     | NULL    |                |
| max_daily_capacity | int          | YES  |     | 10      |                |
+--------------------+--------------+------+-----+---------+----------------+

CREATE TABLE appointments_dc (
    appointment_id INT PRIMARY KEY AUTO_INCREMENT,
    patient_id INT,
    doctor_id INT,
    appointment_date DATE,
    appointment_time TIME,
    status VARCHAR(20) DEFAULT 'SCHEDULED',
    FOREIGN KEY (patient_id) REFERENCES patients_dc(patient_id),
    FOREIGN KEY (doctor_id) REFERENCES doctors_dc(doctor_id)
);
+------------------+-------------+------+-----+-----------+----------------+
| Field            | Type        | Null | Key | Default   | Extra          |
+------------------+-------------+------+-----+-----------+----------------+
| appointment_id   | int         | NO   | PRI | NULL      | auto_increment |
| patient_id       | int         | YES  | MUL | NULL      |                |
| doctor_id        | int         | YES  | MUL | NULL      |                |
| appointment_date | date        | YES  |     | NULL      |                |
| appointment_time | time        | YES  |     | NULL      |                |
| status           | varchar(20) | YES  |     | SCHEDULED |                |
+------------------+-------------+------+-----+-----------+----------------+

CREATE TABLE appointment_audit_dc (
    audit_id INT PRIMARY KEY AUTO_INCREMENT,
    appointment_id INT,
    action_type VARCHAR(50),
    action_time TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
+----------------+-------------+------+-----+-------------------+-------------------+
| Field          | Type        | Null | Key | Default           | Extra             |
+----------------+-------------+------+-----+-------------------+-------------------+
| audit_id       | int         | NO   | PRI | NULL              | auto_increment    |
| appointment_id | int         | YES  |     | NULL              |                   |
| action_type    | varchar(50) | YES  |     | NULL              |                   |
| action_time    | timestamp   | YES  |     | CURRENT_TIMESTAMP | DEFAULT_GENERATED |
+----------------+-------------+------+-----+-------------------+-------------------+

